{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Home Assistant",
      "type": "debugpy",
      "request": "launch",
      "module": "homeassistant",
      "args": [
        "--debug",
        "-c",
        "config"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/custom_components"
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "purpose": ["debug-in-terminal"]
    },
    {
      "name": "Debug Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--no-cov"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "purpose": ["debug-test"]
    },
    {
      "name": "Debug All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "-v",
        "--no-cov"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "purpose": ["debug-test"]
    },
    {
      "name": "Debug Specific Test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "-v",
        "--no-cov",
        "-k",
        "${input:testName}"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "purpose": ["debug-test"]
    },
    {
      "name": "Debug calculation.py Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/test_calculation.py",
        "-v",
        "--no-cov"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "purpose": ["debug-test"]
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Enter test name or pattern (e.g., 'test_gamma' or 'vertical')",
      "default": ""
    }
  ]
}
